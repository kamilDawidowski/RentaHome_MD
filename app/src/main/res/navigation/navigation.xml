<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="wat.mobilne.renthome.withoutLogin.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_regiserFragment"
            app:destination="@id/regiserFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/loginFragment" />
        <action
            android:id="@+id/action_loginFragment_to_exploreFragment"
            app:destination="@id/exploreFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/regiserFragment"
        android:name="wat.mobilne.renthome.withoutLogin.register.RegiserFragment"
        android:label="fragment_regiser"
        tools:layout="@layout/fragment_regiser" />
    <fragment
        android:id="@+id/mapFragment"
        android:name="wat.mobilne.renthome.afterLogin.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/exploreFragment"
        android:name="wat.mobilne.renthome.afterLogin.explore.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" >
        <action
            android:id="@+id/action_exploreFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment"
            app:popUpTo="@id/exploreFragment" />
        <action
            android:id="@+id/action_exploreFragment_to_addOfferFragment"
            app:destination="@id/addOfferFragment"
            app:popUpTo="@id/exploreFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="wat.mobilne.renthome.afterLogin.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment"
            app:popUpTo="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="wat.mobilne.renthome.afterLogin.explore.exploreItemDetail.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <action
            android:id="@+id/action_itemDetailFragment_to_itemReservationDetailFragment"
            app:destination="@id/itemReservationDetailFragment"
            app:popUpTo="@id/itemDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemReservationDetailFragment"
        android:name="wat.mobilne.renthome.afterLogin.explore.exploreItemDetail.ItemReservationDetailFragment"
        android:label="fragment_item_reservation_detail"
        tools:layout="@layout/fragment_item_reservation_detail" />
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="wat.mobilne.renthome.afterLogin.profile.ChangePasswordFragment"
        android:label="fragment_change_password"
        tools:layout="@layout/fragment_change_password" />
    <fragment
        android:id="@+id/reservationFragment"
        android:name="wat.mobilne.renthome.afterLogin.reservation.ReservationFragment"
        android:label="fragment_reservation"
        tools:layout="@layout/fragment_reservation" />
    <fragment
        android:id="@+id/addOfferFragment"
        android:name="wat.mobilne.renthome.afterLogin.addNewOffer.AddOfferFragment"
        android:label="fragment_add_offer"
        tools:layout="@layout/fragment_add_offer" />
</navigation>